---
import type { CollectionEntry } from "astro:content";
import P5Card from "@components/p5/P5Card";

type Props = {
  post: CollectionEntry<"blog">;
  index?: number;
};

const { post, index = 0 } = Astro.props;
const url = `/blog/${post.data.legacySlug}/`;
const dateText = post.data.pubDate.toLocaleDateString("en-US", { dateStyle: "medium" });
const variant = index % 3;
---

<P5Card title={post.data.title} description={post.data.description} dateText={dateText} url={url} variant={variant} client:visible />
